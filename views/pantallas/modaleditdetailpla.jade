					label(for='Horasdiurnas')= 'Horas Diurnas'
					input(type='number' name='editHorasdiurnas' placeholder='0' id='idHorasdiurnas')
				div(class=['ui','field'])
					label(for='Horasnocturnas')= 'Horas Nocturnas'
					input(type='number' name='editHorasnocturnas' placeholder='0' id='idHorasnocturnas')
			div(class=['ui','field'])
				label(for='Idsalariotot')= 'Salario Total($)'
